[module/music]
type = custom/script
interval = 2

label-foreground = ${bar/mybar.color1}
label = %output:0:45:...%
exec = ~/.config/polybar/mpris.sh
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next

[module/mpdmusic]
type = custom/script
interval = 1

label-foreground = ${bar/mybar.xrdbforeground}
label = %output:0:45:...%
exec = ~/.config/polybar/mpdmusic.sh
click-left = mpc prev
click-middle = mpc toggle
click-right = mpc next

[module/pavolume]
type = custom/script
tail = true
label = %output%
exec = ~/.config/polybar/pavolume.sh --listen
